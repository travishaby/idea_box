<div class="row">

  <div class="col-md-3">

  </div>

  <div class="col-md-6">
    <h3>Please Login</h3><br>

    <%= form_for :session, url: login_path do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.submit "Login" %>
    <% end %>

  </div>


</div>
